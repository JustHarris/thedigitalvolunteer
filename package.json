{
  "name": "thedigitalvolunteer-api",
  "version": "1.0.0",
  "author": "Ivan Ugarte <ivan.ugarte.castro@gmail.com>",
  "license": "MIT",  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustHarris/thedigitalvolunteer.git"
  },
  "homepage": "https://github.com/JustHarris/thedigitalvolunteer#readme",
  "bugs": {
    "url": "https://github.com/JustHarris/thedigitalvolunteer/issues"
  },
  "scripts": {    
    "start": "yarn nodemon",    
    "dev": "cross-env NODE_ENV=development babel-node ./api/api.js",
    "nodemon": "nodemon --exec yarn run dev",
    "lint": "eslint ./api/. ./config/. ./test/.",
    "prepush": "yarn test",
    "pretest": "yarn lint",
    "build": "babel -d ./dist ./src -s",    
    "production": "cross-env NODE_ENV=production node ./dist/index.js",
    "test": "jest --coverage --forceExit"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "core-js": "^2.6.9",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-routes-mapper": "^1.0.2",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.1",
    "sequelize": "^5.21.7",
    "sqlite3": "^4.0.0",
    "mysql2": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/node": "7.0.0",
    "@babel/plugin-proposal-throw-expressions": "7.0.0",
    "@babel/preset-env": "7.1.5",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "nodemon": "^1.17.3",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  }
}
